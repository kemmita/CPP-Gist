#include <iostream>
#include <string>

using namespace std;

int main() {

    //old way of doing arrays and iteration.
    string Texts [] = {"three", "three", "Three"};
    int Numbers [] = {1, 2, 3, 4, 5};
    for(int i=0; i<3; i++){
       cout<< Texts[i]<<endl;
    }

    //utilizing the key word "auto" allows us to to get rid of the data types and even the array brackets after the given name such as texts or numbers.
    //the code below does the same thing as the code above.
    auto texts = {"one", "Two", "Three"};
    auto numbers  = {1, 2, 3, 4, 5};
  
    //again we are using the auto key word to declare i which is then going to take on the same data type as our array texts. And this is a for each loop a newer, faster way of iterating through a loop
    //for each time i does not equal the elements stored in texts, print data stored in texts.
    for(auto i: texts ){
   
        cout<< i <<endl;
    }


    return 0;
}
