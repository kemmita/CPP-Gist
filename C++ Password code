
#include<iostream>
using namespace std;

//let us create a program that continues to run until the user has entered  the correct password. 
int main(int argc, char** argv) {
    //by adding const before string password, this means this variable cannot change throughout the whole program. 
    const string password = "DefCon";
    
  
    
    cout<<"Please enter your password > "<<flush;
    string input;
    cin>> input;
    
    while(input != password){
        cout<<"Password Incorrect, Please Try Again > "<<flush;
        cin>> input;
    }
    cout<<"Password Accepted!"<<endl;

    

 
  
    return 0;
}
